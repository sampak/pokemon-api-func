{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "HttpTrigger/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "lint",
    "dist",
    ".eslintrc.js"
  ]
}
